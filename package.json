{
  "name": "@holdenmatt/testmark",
  "version": "0.0.4",
  "description": "Write unit tests in Markdown. Run them in any test framework.",
  "author": "Matt Holden",
  "license": "MIT",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/holdenmatt/testmark"
  },
  "homepage": "https://github.com/holdenmatt/testmark",
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "ultracite lint",
    "format": "ultracite format",
    "prepublishOnly": "pnpm build && pnpm test"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.2",
    "@types/node": "^24.3.0",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2",
    "ultracite": "^5.2.8",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "vitest": ">=3.0.0"
  },
  "peerDependenciesMeta": {
    "vitest": {
      "optional": true
    }
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./vitest": {
      "import": "./dist/adapters/vitest.js",
      "types": "./dist/adapters/vitest.d.ts"
    }
  },
  "bin": {
    "testmark": "./dist/cli.js"
  },
  "files": [
    "dist"
  ],
  "packageManager": "pnpm@10.11.0"
}
